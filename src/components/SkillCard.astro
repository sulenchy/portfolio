---
import { SkillCategory } from "../data/user-info";


const { category, skills } = Astro.props as SkillCategory;


---

<div class="flex border-b-2 h-32 p-5 items-center">
    <div class="w-1/3">
        <h3 class="text-xl font-semibold text-orange-500">{category}</h3>
    </div>
    <div class=`flex w-2/3 ${skills.length > 3 && 'scrolling-right-left'}`>
    
        {
            skills.map((skill, index) => <div class="flex flex-col items-center justify-center w-40 m-5 mt-0 shadow-sm p-5 pt-0 text-center rounded cursor-pointer hover:bg-slate-200"><h2>{skill.name}</h2> <p>{skill.yearsOfExperience} {skill.yearsOfExperience > 1 ? 'yrs' : 'yr'}</p></div>)
        }
        
    </div>
</div>




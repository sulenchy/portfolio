---
import { SkillCategory } from "../data/user-info";


const { category, skills } = Astro.props as SkillCategory;


---

<div class="flex flex-col md:flex-row border-b-2 p-5 items-center">
    <div class="mr-10">
        <h3 class="text-xl font-semibold text-orange-500">{category}</h3>
    </div>
    <div class=`flex my-5 ${skills.length > 3 && 'scrolling-right-left'}`>
    
        {
            skills.map((skill, index) => <div class="flex items-center justify-center shadow-sm text-center rounded cursor-pointer hover:bg-slate-200 m-3">
                <h2 class="w-full">{skill.name} | {skill.yearsOfExperience} {skill.yearsOfExperience > 1 ? 'yrs' : 'yr'}</h2> 
                <p></p>
            </div>)
        }
        
    </div>
</div>




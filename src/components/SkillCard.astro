---
import { Skill, SkillCategory } from "../data/skills";


const { name, yearsOfExperience } = Astro.props as Skill;
const { category, skills } = Astro.props as SkillCategory;
---

<div class="flex border-b-2 h-32 mt-10 hover:shadow-md">
    <div class="w-1/3">
        <h3 class="text-xl font-semibold">{category}</h3>
    </div>
    <div class="flex w-2/3">
    
        {
            skills.map(skill => <div class="w-40 m-5 mt-0 shadow-sm p-5 pt-0 text-center rounded cursor-pointer hover:bg-slate-200"><h2>{skill.name}</h2> <p>{skill.yearsOfExperience}</p></div>)
        }
        
    </div>
</div>




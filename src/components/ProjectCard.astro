---
import type { Project } from '../data/user-info';


const { title, description, technologies, liveLink, githubLink } = Astro.props as Project;
---

<div class="flex w-full m-2 flex-col p-5 border md:w-1/3 rounded-lg hover:shadow-lg transition duration-300">
	<h2 class="text-2xl font-semibold">{title}</h2>
	<p class="mt-2">{description}</p>
	<p>{technologies.map((tech) => tech)}</p>
	<div class="flex gap-5">
		<a href={liveLink} class="text-blue-500 underline mt-4 inline-block">View Project</a>
		<a href={githubLink} class="text-blue-500 underline mt-4 inline-block">Github</a>
	</div>
</div>
